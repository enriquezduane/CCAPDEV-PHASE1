<div class="logo-container">
  <div class="ragnarok-logo-frame">
      <a href="/">
          <img alt="dark-lord" src="images/dark-lord.gif">
          <h1 id="logo">NexusHub</h1>
          <img alt="kades" src="images/kades.gif" style="height: 180px; width: 160px;">
      </a>
  </div>
</div>

<div class="content-container dashed-black-container container-margin">
  <div class="title-header post-container-template topic-header">
      Search Results for "<%= query %>"
  </div>
  <div class="post-section-top">
      <div class="left-side-buttons">
          <a href="#bot" id="top">Go Down</a>
          <button class="prev-button">Previous</button>
          <button class="next-button">Next</button>
      </div>
  </div>

  <% if (posts.length > 0) { %>
      <% posts.forEach( (post, index) => { %>
          <div class="search-result-container post-section post-container-template">
              <div class="search-result-content">
                  <a href="/post/<%= post.title.toLowerCase() %>">
                      <%- highlightSubstring(post.title, query) %>
                  </a>
                  <span>
                      <strong>#<%= index + 1 %></strong>
                  </span>
              </div>
              <p>
                  <span style="font-size: 15px;"><%= post.date %></span> by <a href="/user/id=<%= post.poster.id %>"><%= post.poster.username %></a>
              </p>
          </div>
      <% }) %>
  <% } else { %>
      <div class="search-result-container post-section post-container-template">
          <p>No results found for <strong style="color: #FFF; font-size: 18px;"><%= query %></strong>.</p>
      </div>
  <% } %>

  <div class="reply-section-top">
      <div class="left-side-buttons">
          <a href="#top" id="bot">Go Up</a>
          <button class="prev-button">Previous</button>
          <button class="next-button">Next</button>
      </div>
  </div>
</div>