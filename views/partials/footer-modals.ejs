<% if (!loggedIn) { %>
  <div class="modal">
    <div class="modal-container">
      <div class="modal-header">
        <h2>Login</h2>
        <span><button class="close-btn">&times;</button></span>
      </div>
      <div class="modal-content">
        <form id="login-form">
          <label for="username">Username:</label>
          <input type="text" id="username" name="username" required><br>
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" style="margin-left: 3px;" required><br>
          <div class="remember-me-container">
            <input type="checkbox" id="remember-me" name="rememberMe">
            <label for="remember-me">Remember Me</label>
          </div>
          <button type="submit">Step into the Realm</button>
        </form>
        <br style="padding-top: 100px;">
        <span>Don't have an account?<br><br>
          <a href="#" id="sign-up">Sign up</a>
        </span>
      </div>
    </div>
  </div>

  <div class="modal2">
    <div class="agreement-frame">
      <div id="registration-agreement">
        Registration Agreement
      </div>
      <div>
        <p>
